{
  "name": "Study Buddies",
  "version": "1.0",
  "manifest_version": 3,
  "description": "Floating study buddy that appears after selection",
  "icon": "./assets/characters/animals/CatIcon.png",

  "permissions": [
    "storage",
    "scripting",
    "activeTab",
    "tabs"
  ],
  
  "host_permissions": [
    "<all_urls>"
  ],

  "action": {
    "default_popup": "index.html",
    "default_icon": "./assets/StudyBuddiesIcon.png"
  },

  "browser_action": {
    "default_icon": "./assets/StudyBuddiesIcon.png"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],

  "web_accessible_resources": [
    {
      "resources": [
        "assets/characters/animals/*"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
