{
  "name": "Study Buddies",
  "version": "1.0.0",
  "manifest_version": 3,
  "description": "Floating study buddy that appears after selection.",
  "icons": {
    "16": "assets/StudyBuddyIcon.png",
    "32": "assets/StudyBuddyIcon.png",
    "48": "assets/StudyBuddyIcon.png",
    "128": "assets/StudyBuddyIcon.png"
  },
  "permissions": [
    "storage",
    "scripting",
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "index.html",
    "default_icon": "assets/StudyBuddyIcon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/characters/animals/*"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}